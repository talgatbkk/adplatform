    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProfile</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProfile</servlet-name>
        <url-pattern>/user/view</url-pattern>
    </servlet-mapping>

