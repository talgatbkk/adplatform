    </servlet>
    <servlet-mapping>
        <servlet-name>PostProfileEditing</servlet-name>
        <url-pattern>/user/post_edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InputNewPassword</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputNewPassword</servlet-name>
        <url-pattern>/user/password</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>PostNewPassword</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostNewPassword</servlet-name>
        <url-pattern>/user/password/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserBan</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserBan</servlet-name>
        <url-pattern>/user/ban</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserUnban</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUnban</servlet-name>
        <url-pattern>/user/unban</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InformBanned</servlet-name>
        <jsp-file>/jsp/InformBanned.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>InformBanned</servlet-name>
        <url-pattern>/user/banned</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ChangeLanguage</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeLanguage</servlet-name>
        <url-pattern>/language</url-pattern>
    </servlet-mapping>

    <servlet>
