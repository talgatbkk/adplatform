<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">


    <display-name>Advertisement web app</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ViewAdvertisement</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ViewAdvertisement</servlet-name>
        <url-pattern>/advertisement/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchAdvertisement</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>SearchAdvertisement</servlet-name>
        <url-pattern>/advertisement/search</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>PostComment</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet>

        <servlet-name>PostAdvertisement</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostAdvertisement</servlet-name>
        <url-pattern>/advertisement/post</url-pattern>
    </servlet-mapping>
    <servlet>

        <servlet-name>DeleteAdvertisement</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddAdvertisement</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddAdvertisement</servlet-name>
        <url-pattern>/advertisement/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteAdvertisement</servlet-name>
        <url-pattern>/advertisement/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PostComment</servlet-name>
        <url-pattern>/advertisement/view/comment/post</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpPage</servlet-name>
        <jsp-file>/jsp/SignUp.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUpPage</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignInPage</servlet-name>
        <jsp-file>/jsp/SignIn.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignInPage</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>OpenProfile</servlet-name>
        <jsp-file>/jsp/Profile.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenProfile</servlet-name>
        <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProfile</servlet-name>
        <jsp-file>/jsp/EditProfile.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditProfile</servlet-name>
        <url-pattern>/user/profile/edit</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>

    <servlet>
