        <url-pattern>/location/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostLocation</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostLocation</servlet-name>
        <url-pattern>/location/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCategory</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCategory</servlet-name>
        <url-pattern>/category/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostCategory</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostCategory</servlet-name>
        <url-pattern>/category/post</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.AdvertisementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayAdvertisementImage</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.ImageDisplayController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAdvertisementImage</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadAdvertisementImage</servlet-name>
        <servlet-class>kz.epam.tcfp.controller.ImageUploadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadAdvertisementImage</servlet-name>
        <url-pattern>/advertisement/upload/image</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SetEncoding</filter-name>
        <filter-class>kz.epam.tcfp.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>characterEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <context-param>
        <param-name>imageLocation</param-name>
        <param-value>/home/tubuntu/Documents/db/images/</param-value>
    </context-param>


    <filter-mapping>
        <filter-name>SetEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsp/Error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/Error.jsp</location>
    </error-page>

</web-app>

